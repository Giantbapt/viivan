<div class="container">
  <div class="banner-dashboard">
  	<h1>Dashboard Admin</h1>
    <div class="egg-content">
      <div class="row">
        <h2>Nombre d'oeufs : <%=Oeuf.count %></h2>


      </div>

      <div class="new-egg">
        <%= simple_form_for @oeuf, url: oeufs_create_path do |f| %>
            <div class="form-actions">
            <%= f.button :submit, "Ajouter un nouvel oeuf", class: "btn btn-primary full-width" %>
            </div>
        <% end %>
      </div>

  	<div class="suggestion-content">
  		<h2>Suggestions</h2>
  		<div class="dashboard-suggestions">
  			<% @suggestions.each do |suggestion| %>
  			<div class="dash-suggestion">
  				<h3 class="text-center"><%= suggestion.ville %></h3>
  				<div class="dash-owner">
  					<p>Par : <%= suggestion.name_owner %></p>
  				 	<p>Email : <%= suggestion.email_owner %></p>
  				</div>
  				<br>
  				<div class="dash-contact">
  					<h4>Contact</h4>
  					<p> Nom du contact : <br><strong><%= suggestion.name_contact %>  </strong></p>
  					<p> Adresse : <br> <strong><%= suggestion.address %> </strong> </p>
  					<p> Ville : <br> <strong><%= suggestion.ville %> </strong> </p>
  					<p> Code Postal : <br> <strong><%= suggestion.code_postal %> </strong> </p>
  					<p> Num√©ro de tel : <br> <strong><%= suggestion.phone_number %>  </strong></p>
  					<p> Email : <br> <strong><%= suggestion.email %> </strong> </p>
  					<p> Description : <br> <strong><%= suggestion.description %> </strong> </p>
  					<p> Categorie : <br> <strong><%= suggestion.category %> </strong> </p>

  				</div>
  			</div>
  			<% end %>
  		</div>

  	</div>
  	<div class="dashboard-articles">
      <h2>Nombre d'articles : <%=Article.count%></h2>
      <% @articles.each do |article| %>

      <%end %>

  	</div>
  </div>

</div>
